<!--miniprogram/pages/index/more.wxml-->
<view class="container">
  <view class="status">
    <text>更多</text>
  </view>
  <view class="content">
    <view class="weui-cells__title">个人信息</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
          <open-data type="userAvatarUrl" style="width: 50px; height: 50px; display: block"></open-data>
        </view>
        <view class="weui-cell__bd">
          <view>
            <text>{{name}}</text>
          </view>
          <view style="font-size: 13px;color: #888888;">{{student_id}}</view>
        </view>
      </view>
      <navigator url="/pages/index/edit_name_id" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd">修改姓名及学号</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
    </view>
  </view>
</view>