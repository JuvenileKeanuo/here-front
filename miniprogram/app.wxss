/**app.wxss**/
@import '/style/weui.wxss';
.container {
  background-color: #4f58a8;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  box-sizing: border-box;
  display: -webkit-flex;
  -webkit-justify-content: center;
  -webkit-align-items: center;
} 

.content {
  background-color: #e8eff5;
  position:fixed;
  width:100%;
  height:100vh;
  top:80rpx;
}

.status {
  color: #fff;
  font-size: 42rpx;
  position: fixed;
  left:40rpx;
  top:0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}